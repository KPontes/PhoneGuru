<%= form_with(model: number, local: true) do |form| %>
  <% if number.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(number.errors.count, "error") %> prohibited this number from being saved:</h2>

      <ul>
      <% number.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-2">
      <div class="form-group">
        <%= form.label :number %>
        <%= form.text_field :number, id: :number_number, class:'form-control', readonly: "readonly" %>
      </div>            
    </div>           
  </div>
  <div class="row">
    <div class="col-md-2"> 
      <div class="form-group">
        <%= form.label :countrycode, 'Country Code' %>
        <%= form.text_field :countrycode, id: :number_countrycode, maxlength: 2, minlength: 2, size: 2, class:'form-control' %>
      </div> 
    </div>
    <div class="col-md-1"> 
      <div class="form-group">
        <%= form.label :cn, 'CN' %>
        <%= form.text_field :cn, id: :number_cn, maxlength: 2, minlength: 2, size: 2, class:'form-control' %>
      </div> 
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= form.label :prefix, 'Number' %>
        <div class="form-inline">
          <%= form.text_field :prefix, id: :number_prefix, maxlength: 5, minlength: 5, size: 5, class:'form-control' %> - 
          <%= form.text_field :mcdu, id: :number_mcdu, maxlength: 4, minlength: 4, size: 4, class:'form-control' %>
        </div> 
      </div>
    </div>    
  </div>

  <div class="form-group">
    <%= form.label :validation %>
    <%= form.text_area :validation, id: :number_validation, class:'form-control' %>
  </div>

  <% @ruletype.each do |rt| %>
    <div>
      <%= check_box_tag "ruletype[ruletype_id][]", rt.id, @number.ruletypes.include?(rt) %>
      <%= rt.name %>
    </div>
  <% end %>
 
  <div class="actions">
    <%= form.submit 'Save', id: :number_save, class:'btn btn-primary' %>
  </div>
<% end %>
